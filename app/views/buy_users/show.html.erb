<h2>購入履歴</h2>

<table>
	<tr>
		<th>購入商品名</th>
		<th>値段</th>
		<th>購入数</th>
		<th>お届け先住所</th>
		<th>合計金額</th>
	</tr>
	<% @buy_user.each do |buy| %>
	<tr>
		<td><%= buy.buy_product %></td>
		<td><%= buy.price %></td>
		<td><%= buy.buy_stock %></td>
		<td><%= buy.user_address %></td>
		<td><%= buy.price * buy.buy_stock %></td>
	</tr>
</table>