<h2>(<%= current_shop.shop_name %>)</h2>
<h2>ルーム名：<%= @room.room_name %></h2>
<%= link_to "coopルーム",rooms_path, class: "btn btn-success " %>

<table class="table" border="3" bordercolor="black">
	<tr>
		<th>購入者名</th>
		<th>購入商品名</th>
		<th>値段</th>
		<th>購入数</th>
		<th>お届け先住所</th>
		<th>合計金額</th>
		<th>購入日</th>
	</tr>
	<% @room_history.each do |history| %>
	<tr>
		<td><%= history.buy_user %></td>
		<td><%= history.buy_product %></td>
		<td><%= history.price %> 円</td>
		<td><%= history.buy_stock %></td>
		<td><%= history.buy_user_address %></td>
		<td><%= history.price_total %> 円</td>
		<% time = history.created_at.in_time_zone('Asia/Tokyo') %>
			<td><%= time.strftime('%Y年%m月%d日 %H時%M分%S秒') %></td>
	</tr>
	<% end %>
</table>