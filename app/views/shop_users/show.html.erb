<h1>店舗情報</h1>

<table>
	<tr>
		<th>ID</th>
		<td><%= @shop_user.id %></td>
	</tr>
	<tr>
		<th>店名</th>
		<td><%= @shop_user.shop_name %></td>
	</tr>
	<tr>
		<th>代表者名</th>
		<td><%= @shop_user.owner %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @shop_user.email %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= @shop_user.phone_number%></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @shop_user.shop_address %></td>
	</tr>
	<tr>
		<th>登録日</th>
		<td><%= @shop_user.created_at %></td>
	</tr>
	<tr>
		<th>更新日</th>
		<td><%= @shop_user.updated_at %></td>
	</tr>

	<%= link_to '編集',edit_shop_user_path, class: 'btn btn-primary mr-3' %>
	<%= link_to '削除',[@shop_user], method: :delete, data: { confirm: "ユーザー「#{@shop_user.shop_name}」を削除します。よろしいですか?"}, class: 'btn btn-danger' %>
</table>

